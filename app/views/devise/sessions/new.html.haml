.container.d-flex.align-items-center.justify-content-center.rounded.mt-5
  .row.w-100
    .col-12.col-sm-10.col-md-8.col-lg-6.mx-auto
      .card.shadow.rounded-4.bg-light-subtle
        .card-body.p-4
          %h2.text-center.mb-4 Iniciar sesión

          = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .form-inputs
              = f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control rounded-pill" }

              = f.input :password,
                required: false,
                input_html: { autocomplete: "contraseña", class: "form-control rounded-pill" }

              - if devise_mapping.rememberable?
                .form-check.mb-3
                  = f.input :remember_me,
                    as: :boolean,
                    wrapper: false,
                    label: "Mantener sesión iniciada",
                    input_html: { class: "form-check-input" },
                    label_html: { class: "form-check-label" }

            .form-actions.mt-3
              = f.button :submit, "Entrar", class: "btn btn-primary w-100 rounded-pill"

          .mt-3.text-center
            = render "devise/shared/links"
